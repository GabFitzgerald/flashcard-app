<h1>Courses</h1>

<table>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <% if current_user.has_role?(:educator) %>
          <td><%= link_to 'Details', course %></td>
          <td><%= link_to 'Edit name', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <% # enrol button %>
          <% # view%>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.has_role?(:educator) %>
  <%= link_to 'Add Course', new_course_path %>
<% end %>