<p id="notice"><%= notice %></p>

<p>
  <strong>Question:</strong>
  <%= @card.question %>
</p>

<% if @card.question_picture %>
  <%= image_tag @card.question_picture, width: '100', height: '100' %>
<% end %>

<p>
  <strong>Answer:</strong>
  <%= @card.answer %>
</p>


<p>
  <strong>Endorsed:</strong>
  <%= @card.endorsed %>
</p>

<p>
  <strong>Created by:</strong>
  <%= @card.user.name %>
</p>

<%= link_to 'Edit', edit_card_path(@card) %> |
<%= link_to 'Back', cards_path %>
