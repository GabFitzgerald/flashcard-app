<p id="notice"><%= notice %></p>

<p>
  <strong>Question:</strong>
  <%= @card.question %>
</p>

<%= image_tag(@card.question_picture, width: '100', height: '100') if @card.question_picture.attached? %>

<p>
  <strong>Answer:</strong>
  <%= @card.answer %>
</p>
 <%= image_tag(@card.answer_picture) if @card.question_picture.attached? %>

<p>
  <strong>Endorsed:</strong>
  <%= @card.endorsed %>
</p>

<p>
  <strong>Created by:</strong>
  <%= @card.user.name %>
</p>

<%= link_to 'Edit', edit_card_path(@card) %> |
<%= link_to 'Back', cards_path %>
