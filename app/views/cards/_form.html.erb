<%= form_with(model: card, local: true) do |form| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
        <% card.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :question %>
    <%= form.text_area :question %>
  </div>

  <div class="field">
    <%= form.label :question_picture %>
    <%= form.file_field :question_picture %>
  </div>

  <div class="field">
    <%= form.label :answer %>
    <%= form.text_area :answer %>
  </div>

  <div class="field">
    <%= form.label :answer_picture %>
    <%= form.file_field :answer_picture %>
  </div>
  

  <%# add logic so that this is only visible to teachers
   or change so that if a teacher created the card, it is automatically endorsed%>
  <div class="field">
    <%= form.label :endorsed %>
    <%= form.check_box :endorsed %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
