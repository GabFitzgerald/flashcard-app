<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th>Endorsed</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.question %></td>
        <td><%= card.answer %></td>
        <td><%= card.endorsed %></td>
        <td><%= card.user.name %></td>
        <td><%= link_to 'Show', card %></td>
        <%# only show edit and delete options to user if they created the card (TODO: or if the user is an educator)%>
        <% if current_user.id == card.user_id || current_user.has_role?(:educator) %>
          <td><%= link_to 'Edit', edit_card_path(card) %></td>
          <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

